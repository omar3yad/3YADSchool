@using ITISchool.Models
@model InstructorDepartmentCourse
@{
    ViewData["Title"] = "Add Instructor";
}
<form action="/Instructor/SaveInstructor" method="post">
    <input type="hidden" name="Imag" value="1.jpg">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="Name" value="@Model?.Name" name="Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label for="MangerName">Salary</label>
        <input type="number" class="form-control" id="Salary" value="@Model?.Salary" name="Salary" required>
    </div>

    <div class="form-group">
        <label for="Department">Department</label>
        <select class="form-control" id="Department" name="DeptId" required>
            <option value="">-- Select Department --</option>
            @foreach (var dept in Model?.departments ?? new List<Department>())
            {
                <option value="@dept.Id">@dept.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Course">Course</label>
        <select class="form-control" id="Course" name="CrsId">
            <option value="">-- Select Course --</option>
            @foreach (var course in Model?.Course ?? new List<Course>())
            {
                <option value="@course.Id">@course.Name</option>
            }
        </select>

    </div>

    <button type="submit" class="btn btn-primary">Add Course</button>

</form>