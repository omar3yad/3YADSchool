@using ITISchool.Models
@model TraineeDepartmentCourse
<h2>Add Instructor</h2>

<form asp-action="SaveAdd" asp-controller="Trainees" method="post">
    <input type="hidden" name="Image" value="1.jpg">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Grade"></label>
        <input class="form-control" asp-for="Grade" required>
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input class="form-control" asp-for="Address" required>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="departments">Department</label>
        <select class="form-control" id="Department" name="DeptId" required>
            <option value="">-- Select Department --</option>
            @foreach (var dept in Model?.departments ?? new List<Department>())
            {   <option value="@dept.Id">@dept.Name</option>  }
        </select>
        <span asp-validation-for="DeptId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"> Save </button>
</form>