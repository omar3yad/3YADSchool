@using ITISchool.Models
@model TraineeDepartment
<h2>Edit Trainee</h2>

<form action="/Trainees/SaveTrainee" method="post">
    <input type="hidden" name="Id" value="@Model?.Id" />
    <input type="hidden" name="Image" value="1.jpg">


    <div class="card shadow p-4">

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="Name" value="@Model?.Name" name="Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="MangerName">Grade</label>
            <input type="number" class="form-control" id="Grade" value="@Model?.Grade" name="Grade" required>
            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="MangerName">Address</label>
            <input type="text" class="form-control" id="Address" value="@Model?.Address" name="Address" required>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Department">Department</label>
            <select class="form-control" id="Department" name="DeptId" required>
                <option value="">-- Select Department --</option>
                @foreach (var dept in Model?.departments ?? new List<Department>())
                { <option value="@dept.Id">@dept.Name</option> }
            </select>
            <span asp-validation-for="DeptId" class="text-danger"></span>
        </div>
    </div>

    <hr class="my-4" />

